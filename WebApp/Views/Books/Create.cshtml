@model DataAccess.Model.Book
@{
    ViewBag.Title = "Create";
}

<h2>Nová kniha</h2>

@using (Html.BeginForm("Add", "Books", FormMethod.Post, new { @class = "form-horizontal" }))
{


    <div class="form-group">
        <label  class="col-sm-2 control-label">Název knihy</label>
        <div class="col-sm-10">
            
            @Html.TextBoxFor(x => x.Name, new { @class="form-control"})
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Autor knihy</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Rok vydání</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.PublishedYear, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Vytvořit knihu</button>
        </div>
    </div>
}